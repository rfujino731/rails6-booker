<div class="left-button">
  <%= link_to "ユーザー一覧に戻る", users_path, class:"user-index-link" %>
</div>
<h4 class="rooms-title">チャットルーム</h4>
<% @entries.each do |e| %>
  <div class="user-name">
    <% unless e.user.id == current_user.id %> 
      <strong>
        <%= e.user.name %>さんとのチャット
      </strong>
    <% end %>
  </div>
<% end %>
<hr>
<div class="chats">
  <div class="chat">
    <% if @messages.present? %>
      <% @messages.each do |m| %>
        <div class="chat-box">

          <div class="chat-hukidashi"> <strong><%= m.message %></strong> <br>
            <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="posts">
    <%= form_for @message do |f| %>
      <%= f.text_field :message, placeholder: "140文字メッセージを入力して下さい" , size: 140, class:"form-text-field" %>
        <%= f.hidden_field :room_id, value: @room.id %>
          <%= f.submit "投稿",class: 'form-submit'%>
    <% end %>
  </div>
</div>